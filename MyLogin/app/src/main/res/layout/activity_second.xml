<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DF8989"
    android:padding="10dp"
    tools:context=".Second">

    <TextView
        android:id="@+id/textv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="This is Your Email"
        app:layout_constraintEnd_toStartOf="@id/textv2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="This Your Password"
        app:layout_constraintBottom_toBottomOf="@id/textv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textv1"
        app:layout_constraintTop_toTopOf="@id/textv1"
        />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/textv2"
            app:layout_constraintStart_toEndOf="@id/textv1"
            android:layout_marginTop="70dp"
            android:text="BACK"
            app:layout_constraintTop_toBottomOf="@id/textv2"/>

</androidx.constraintlayout.widget.ConstraintLayout>